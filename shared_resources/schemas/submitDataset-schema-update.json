{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "assemblyId": {
            "type": "string"
        },
        "vcfLocations": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "vcfGroups": {
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "uniqueItems": true,
                "minItems": 1
            },
            "uniqueItems": true,
            "minItems": 1
        },
        "description": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "externalUrl": {
            "type": "string"
        },
        "info": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            }
        },
        "dataUseConditions": {
            "type": "object",
            "properties": {
                "consentCodeDataUse": {
                    "type": "string"
                },
                "adamDataUse": {
                    "type": "string"
                }
            },
            "required": [
                "consentCodeDataUse",
                "adamDataUse"
            ]
        },
        "individuals": {
            "items": {
                "$ref": "./individual-schema.json"
            },
            "type": "array"
        },
        "biosamples": {
            "items": {
                "$ref": "./biosample-schema.json"
            },
            "type": "array"
        }
    },
    "required": [
        "id"
    ]
}